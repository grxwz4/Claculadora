<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginHorizontal="6dp"
        android:textSize="80sp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/valuer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:layout_marginHorizontal="6dp"
        android:textSize="80sp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    
    <Button
        android:id="@+id/btnAc"
        android:text="AC"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintBottom_toTopOf="@id/num7"
        />

    <Button
        android:id="@+id/btnDel"
        android:text="DEL"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/btnAc"
        app:layout_constraintRight_toLeftOf="@id/btnPrt"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintBottom_toTopOf="@id/num8"
        />

    <Button
        android:id="@+id/btnPrt"
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/btnDel"
        app:layout_constraintRight_toLeftOf="@id/btnDiv"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintBottom_toTopOf="@id/num9"
        android:onClick="operation"
        />

    <Button
        android:id="@+id/btnDiv"
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:textSize="40sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintLeft_toRightOf="@id/text"
        app:layout_constraintBottom_toTopOf="@id/btnMul"
        android:onClick="operation"
        />

    <Button
        android:id="@+id/num7"
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text"
        app:layout_constraintTop_toBottomOf="@id/btnAc"
        app:layout_constraintBottom_toTopOf="@id/num4"
        android:onClick="clickButton"
        />

    <Button
        android:id="@+id/num8"
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/num7"
        app:layout_constraintRight_toLeftOf="@id/num9"
        app:layout_constraintTop_toBottomOf="@id/btnDel"
        app:layout_constraintBottom_toTopOf="@id/num5"
        android:onClick="clickButton"
        />

    <Button
        android:id="@+id/num9"
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/num8"
        app:layout_constraintRight_toLeftOf="@id/btnMul"
        app:layout_constraintTop_toBottomOf="@id/btnPrt"
        app:layout_constraintBottom_toTopOf="@id/num6"
        android:onClick="clickButton"
        />

    <Button
        android:id="@+id/btnMul"
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDiv"
        app:layout_constraintBottom_toTopOf="@id/btnRes"
        android:onClick="operation"
        />

    <Button
        android:id="@+id/num4"
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text"
        app:layout_constraintTop_toBottomOf="@id/num7"
        app:layout_constraintBottom_toTopOf="@id/num1"
        android:onClick="clickButton"
        />

    <Button
        android:id="@+id/num5"
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/num4"
        app:layout_constraintRight_toLeftOf="@id/num6"
        app:layout_constraintTop_toBottomOf="@id/num8"
        app:layout_constraintBottom_toTopOf="@id/num2"
        android:onClick="clickButton"
        />

    <Button
        android:id="@+id/num6"
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/num5"
        app:layout_constraintRight_toLeftOf="@id/btnRes"
        app:layout_constraintTop_toBottomOf="@id/num9"
        app:layout_constraintBottom_toTopOf="@id/num3"
        android:onClick="clickButton"
        />

    <Button
        android:id="@+id/btnRes"
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:textSize="40sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMul"
        app:layout_constraintLeft_toRightOf="@id/text"
        app:layout_constraintBottom_toTopOf="@id/btnSum"
        android:onClick="operation"
        />

    <Button
        android:id="@+id/num1"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text"
        app:layout_constraintTop_toBottomOf="@id/num4"
        app:layout_constraintBottom_toTopOf="@id/num0"
        android:onClick="clickButton"
        />

    <Button
        android:id="@+id/num2"
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/num1"
        app:layout_constraintRight_toLeftOf="@id/num3"
        app:layout_constraintTop_toBottomOf="@id/num5"
        app:layout_constraintBottom_toTopOf="@id/pnt"
        android:onClick="clickButton"
        />

    <Button
        android:id="@+id/num3"
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="1dp"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/num2"
        app:layout_constraintRight_toLeftOf="@id/btnSum"
        app:layout_constraintTop_toBottomOf="@id/num6"
        app:layout_constraintBottom_toTopOf="@id/pnt"
        android:onClick="clickButton"
        />

    <Button
        android:id="@+id/btnSum"
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:textSize="40sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnRes"
        app:layout_constraintLeft_toRightOf="@id/text"
        app:layout_constraintBottom_toTopOf="@id/btnEnt"
        android:onClick="operation"
        />

    <Button
        android:id="@+id/num0"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text"
        app:layout_constraintTop_toBottomOf="@id/num1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="clickButton"
        />

    <Button
        android:id="@+id/pnt"
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/num0"
        app:layout_constraintRight_toLeftOf="@id/num3"
        app:layout_constraintTop_toBottomOf="@id/num2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="clickButton"
        />

    <Button
        android:id="@+id/btnEnt"
        android:text="="
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:textSize="40sp"
        app:layout_constraintRight_toRightOf="@id/btnSum"
        app:layout_constraintTop_toBottomOf="@id/btnSum"
        app:layout_constraintLeft_toLeftOf="@id/num3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="operation"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="200dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginHorizontal="6dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toTopOf="@id/value"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>